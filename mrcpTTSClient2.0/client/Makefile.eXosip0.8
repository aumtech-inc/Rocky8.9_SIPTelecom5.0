include ../Make.def

CC=g++ -ggdb  -Wno-write-strings

SRCS = mrcpClient2.cpp mrcpCommon2.cpp SRPort.cpp
SRCS += sipThread.cpp readerThread.cpp mrcpThread.cpp
SRCS +=  mrcp2_HeaderList.cpp  mrcp2_Request.cpp mrcp2_Event.cpp \
         mrcp2_Response.cpp mrcp2_parser_utils.cpp MrcpInitialize.cpp	\

SRCS_MGR = mrcpTTSClient2Mgr.c

INCPATHS = 	\
    -I ${MRCP_HOME}/include \
    -I ${MRCP_HOME}/include/parser \
    -I ${SVID_HOME}/include     \
    -I ${SVID_HOME}/Common/include      \
    -I ${SVID_HOME}/thirdParty/mrcpClient2/include          \
    -I ${SVID_HOME}/thirdParty/mrcpClient2/include/eXosip2

LIBPATHS =   \
    -L ${MRCP_LIB}  \
    -L ${SVID_HOME}/lib  \
    -L ${SNMP_LIB}  \
    -L ${SVID_HOME}/Common/lib  \
    -L ${SVID_HOME}/thirdParty/libosip2-3.0.3-2/src/osipparser2/.libs       \
    -L ${SVID_HOME}/thirdParty/libosip2-3.0.3-2/src/osip2/.libs     \
    -L ${SVID_HOME}/thirdParty/libeXosip2-3.0.3-3/src/.libs     \
    -L ${SVID_HOME}/thirdParty/xerces-c-src_2_8_0/lib

#	-L ${HOME}/lib \
#	-L ${MRCP_LIB}	\
#	-L ${XERCES_LIB}

LIBS =    \
  	   -lISPUtil -lISPLog -lloglite -larcSNMP -lpthread -ldl \
       -lTTS_mrcpV2 -losipparser2 -losip2 -leXosip2 
#-lxerces-c1_5
MRCPCLIENT2	= ${MRCP_HOME}/bin/ttsClient.mrcp

MRCPTTSCLIENT2MGR  = ${MRCP_HOME}/bin/mrcpTTSClient2Mgr

CPPFLAGS += ${INCPATHS} -D_LARGEFILE64_SOURCE -D_FILE_OFFSET_BITS=64

OBJ = $(SRCS:.cpp=.o)

all: ${MRCPCLIENT2} ${MRCPTTSCLIENT2MGR}

.cpp.o: ${SRCS}
#	g++ -ggdb -DENABLE_TRACE -c $< ${INCPATHS}
	$(CC) -DOSIP_MT -c $< ${INCPATHS}

${MRCPCLIENT2}: ${OBJ} ${SR_LIB}
	$(CC) -DOSIP_MT -o $@ ${OBJ} ${LIBPATHS} ${LIBS} -Wall

${MRCPTTSCLIENT2MGR}: ${SRCS_MGR}
    gcc -ggdb -o ${MRCPTTSCLIENT2MGR} ${SRCS_MGR}		\
		-L /home/devmaul/isp2.2/SNMP/lib		\
		-L /home/devmaul/isp2.2/SIPTelecom3.5/Common/lib	\
		-lISPUtil -lISPLog -lloglite -larcSNMP

${SR_LIB}:
	( cd ${MRCP_HOME}/apisrc; make )

clean:
	rm -rf *.o ${MRCPCLIENT2} ${MRCPTTSCLIENT2MGR}

